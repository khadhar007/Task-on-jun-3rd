<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taskon_3_jun.MainActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnPhnbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btncamera"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="PhonBook" />

        <Button
            android:id="@+id/btncamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnPhnbook"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            android:text="Camera" />

        <Button
            android:id="@+id/btnMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnPhnbook"
            android:layout_centerVertical="true"
            android:text="Music Player" />

        <Button
            android:id="@+id/btnActivity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnMusic"
            android:layout_below="@+id/btnMusic"
            android:layout_marginTop="42dp"
            android:text="Second Activity" />

    </RelativeLayout>

</FrameLayout>

